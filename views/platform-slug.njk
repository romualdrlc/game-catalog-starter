{% extends "layout.njk" %} {% block content %}
<h1><p class="text-center">list of games for {{ data.platformName }}</p></h1>
<div class="row row-cols-1 row-cols-md-4 g-4">
  {% for game in data.gamesForPlatform %}
  <div class="col">
    <div class="card h-100">
      <img
        width="100px"
        height="400px"
        src="{{ game.cover.url }}"
        class="card-img-top"
        alt="Responsive image"
      />
      <div class="card-body">
        <h3 class="card-title">{{ game.name }}</h3>
      </div>
      <div class="card-footer">
        <button style="font-size: 24px">
          <i class="fa fa-shopping-cart">Add to car</i>
        </button>
        <button type="button" class="btn btn-info">
          <a href="/games/{{ game.slug }}">Detail </a>
        </button>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}

